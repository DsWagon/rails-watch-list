<div class="d-flex justify-content-center">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card m-3" style="width: 18rem;">
      <%= image_tag bookmark.movie.poster_url, class: "card-img-top mx-auto d-block", width: 50 %>
        <div class="card-body">
          <h5 class="card-title text-center"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <hr>
          <p class="card-text"><%= bookmark.comment %></p>
          <%= link_to "Delete movie", bookmark_path(bookmark), class:"btn btn-danger m-5", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
    </div>
  <% end %>
</div>


